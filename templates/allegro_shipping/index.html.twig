{% extends "base.html.twig" %}

{% block title %}
	Klakier's AllegroApp - Shipping Rates
{% endblock %}

{% block body %}
	<div class="bd-title h2 m-2">
		Shipping Rates
	</div>
	{% for message in app.flashes('success') %}
		<div class="alert alert-warning mt-3">
			{{ message }}
		</div>
	{% endfor %}
	<div class="table-responsive">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for shippingRate in shippingRates %}
					<tr>
						<td class="align-middle">{{shippingRate.id}}</td>
						<td class="align-middle">{{shippingRate.name}}</td>
						<td class="justify-content-center py-1">
							<button type="button" class="d-inline-block btn btn-success mx-2 my-1 my-0-sm" onclick="location.href='{{ path('allegro-delivery-methods-show-single', {id: shippingRate.id}) }}'">Show</button>
							<button type="button" class="d-inline-block btn btn-warning mx-2 my-1 my-0-sm" onclick="location.href='{{ path('allegro-delivery-methods-show-single', {id: shippingRate.id}) }}'">Modify</button>
							<button type="button" class="d-inline-block btn btn-danger mx-2 my-1 my-0-sm" onclick="location.href='{{ path('allegro-delivery-methods-show-single', {id: shippingRate.id}) }}'">Delete</button>
						</td>
					</tr>
				{% endfor %}
			</tbody>

		</table>
	</div>
{% endblock %}
